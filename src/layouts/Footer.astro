---
import GroupFooterNav from "../components/blocks/GroupFooterNav.astro";
import Container from "../components/shared/Container.astro";
import FooterNav from "../components/shared/FooterNav.astro";
import Paragraph from "../components/shared/Paragraph.astro";

const footerCompany = [
  {
    itemText: "About",
    itemLink: "#",
  },
  {
    itemText: "Products",
    itemLink: "#features",
  },
  {
    itemText: "Careers",
    itemLink: "#",
  },
  {
    itemText: "Contact",
    itemLink: "#cta",
  },
];

const footerProducts = [
  {
    itemText: "Vulcanizing Machines",
    itemLink: "#services",
  },
  {
    itemText: "Conveyor Belts",
    itemLink: "#services",
  },
  {
    itemText: "Rollers & Idlers",
    itemLink: "#services",
  },
  {
    itemText: "Pulley Lagging",
    itemLink: "#services",
  },
];

const footerSupport = [
  {
    itemText: "Contact",
    itemLink: "#cta",
  },
  {
    itemText: "Email",
    itemLink: "mailto:tek.solutions.consultants@gmail.com",
  },
  {
    itemText: "+91 94821 54063",
    itemLink: "tel:+919482154063",
  },
];
---

<div class="relative mt-16">
  <span
    class="w-20 h-20 rounded-full bg-gradient-to-br from-sky-500 from-0% via-primary via-80% to-green-600 to-110% absolute left-1/3 bottom-1/3"
  ></span>
  <span
    class="w-40 h-40 rounded-full bg-gradient-to-br from-yellow-400 from-0% via-green-600 via-60% via-sky-700 via-85% to-primary to-100% absolute right-1 top-2/4"
  ></span>
  <span
    class="w-40 h-40 rounded-full bg-gradient-to-br from-sky-500 from-0% via-primary via-80% to-green-600 to-110% absolute right-1/4 bottom-0"
  ></span>
  <span
    class="w-20 h-20 rounded-full bg-gradient-to-br from-green-500 from-0% via-primary via-80% to-sky-600 to-110% absolute right-1/3 top-1/3"
  ></span>

  <span
    class="w-40 h-40 rounded-full bg-gradient-to-br from-green-500 from-0% via-primary via-80% to-sky-600 to-110% absolute left-0 top-1/3"
  ></span>
  <footer
    class="relative bg-gradient-to-tr from-slate-100/85 to-zinc-200/85 dark:from-slate-800/85 dark:to-zinc-800/85 pt-28 rounded-t-3xl backdrop-blur-md"
  >
    <Container className="pb-8 relative overflow-auto ">
      <div
        class="grid grid-cols-2 lg:grid-cols-3 lg:items-stretch gap-8 relative"
      >
        <div class="col-span-2 lg:col-span-1 h-auto flex flex-col">
          <div class="h-full">
            <a href="#" class="relative flex items-center gap-3">
              <div class="inline-flex text-lg font-semibold text-heading-1">
                TEK SOLUTIONS AND CONSULTANTS
              </div>
            </a>
            <Paragraph className={"mt-8"}>
              Specialists in portable hydraulic vulcanizing machines, conveyor belts, and material handling solutions.
            </Paragraph>
          </div>


        </div>

        <GroupFooterNav>
          <FooterNav title={"Company"} navItems={footerCompany} />
          <FooterNav title={"Products"} navItems={footerProducts} />
        </GroupFooterNav>

        <GroupFooterNav>
          <FooterNav title={"Support"} navItems={footerSupport} />
        </GroupFooterNav>
      </div>
    </Container>
    <div class="py-2 relative">
      <Container>
        <div
          class="flex justify-between items-center gap-6 md:text-lg text-heading-3"
        >
          <div>
            &copy; <span id="year"></span> TEK SOLUTIONS AND CONSULTANTS. All right reserved
          </div>
          <div>
            Made by <a
              href="https://github.com/anmol_TheDev"
              target="_blank"
              class="font-semibold">Anmol Singh</a
            >
          </div>
        </div>
      </Container>
    </div>
  </footer>
</div>
